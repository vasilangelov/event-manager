@using EM.Common;

@if (User.Identity?.IsAuthenticated == true)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Tickets" asp-action="Active">Active tickets</a>
    </li>
    @if (User.IsInRole(RoleConstants.Admin))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Venues" asp-action="Add">Add a venue</a>
        </li>
    }
}
